# ResumeCraft Backend Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# OpenAI (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Optional - for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# Database Configuration (Optional)
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/resumecraft

# ============================================================================
# Vector Store Configuration (Optional)
# ============================================================================

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=resumecraft

# Chroma (Local)
CHROMA_PERSIST_DIRECTORY=./chroma_db

# ============================================================================
# Application Settings
# ============================================================================

# Max file upload size (in MB)
MAX_UPLOAD_SIZE=10

# LLM Settings
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_TEMPERATURE=0.1
MAX_TOKENS=4000

# Workflow Settings
MAX_ENHANCEMENT_ITERATIONS=3
MIN_CONFIDENCE_THRESHOLD=70
MIN_MATCH_SCORE=40

# ============================================================================
# Security & CORS
# ============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Secret key for JWT (if implementing auth)
SECRET_KEY=your-secret-key-here

# ============================================================================
# Monitoring & Analytics (Optional)
# ============================================================================

# LangSmith - Observability for LangGraph workflows
# Get your API key from: https://smith.langchain.com/settings
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=resumecraft
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# LangSmith Cloud Deployment (Optional - if deploying to LangSmith Cloud)
# When connecting Streamlit to deployed LangGraph backend
LANGGRAPH_API_URL=https://api.smith.langchain.com/deployments/your-deployment-id
LANGGRAPH_API_KEY=your-langsmith-api-key-here

# Sentry
SENTRY_DSN=your-sentry-dsn

# Analytics
ENABLE_ANALYTICS=false
