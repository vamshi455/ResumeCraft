{
  "version": "2.0",
  "last_updated": "2025-01-06",
  "description": "MHK Tech Inc - AI Recruitment Platform Matching Rules",

  "matching_weights": {
    "job_title_match": {
      "weight": 0.35,
      "description": "Job title and role alignment - HIGHEST PRIORITY",
      "user_configurable": true
    },
    "skills": {
      "weight": 0.30,
      "description": "Technical skills match from job description",
      "user_configurable": true
    },
    "experience": {
      "weight": 0.20,
      "description": "Years of experience and domain relevance",
      "user_configurable": true
    },
    "profile_description_match": {
      "weight": 0.15,
      "description": "Overall profile narrative match with job description",
      "user_configurable": true
    }
  },

  "deal_breakers": {
    "description": "These must match perfectly or candidate is excluded",
    "location": {
      "enabled": true,
      "strict_mode": true,
      "description": "Location preference must align with job requirement",
      "exclusion_message": "Location preference mismatch"
    },
    "work_authorization": {
      "enabled": true,
      "strict_mode": true,
      "description": "Work authorization must meet job sponsorship policy",
      "exclusion_message": "Work authorization does not meet requirements"
    }
  },

  "work_authorization_rules": {
    "description": "Work authorization compatibility matrix",
    "visa_types": [
      "US Citizen",
      "Green Card",
      "H1B",
      "EAD",
      "OPT",
      "CPT",
      "L2-EAD",
      "E3",
      "TN"
    ],
    "sponsorship_policies": {
      "no_sponsorship": {
        "description": "Job does NOT offer visa sponsorship",
        "accepted_statuses": ["US Citizen", "Green Card", "EAD"],
        "rejected_statuses": ["H1B", "OPT", "CPT", "L2-EAD", "E3", "TN"],
        "reasoning": "Position requires work authorization without sponsorship"
      },
      "h1b_transfer": {
        "description": "Will transfer existing H1B only",
        "accepted_statuses": ["US Citizen", "Green Card", "H1B", "EAD"],
        "rejected_statuses": ["OPT", "CPT", "L2-EAD", "E3", "TN"],
        "reasoning": "Position accepts H1B transfers but no new sponsorship"
      },
      "full_sponsorship": {
        "description": "Will sponsor any valid work visa",
        "accepted_statuses": ["US Citizen", "Green Card", "H1B", "EAD", "OPT", "CPT", "L2-EAD", "E3", "TN"],
        "rejected_statuses": [],
        "reasoning": "Position offers full visa sponsorship"
      },
      "citizen_gc_only": {
        "description": "US Citizen or Green Card holders only",
        "accepted_statuses": ["US Citizen", "Green Card"],
        "rejected_statuses": ["H1B", "EAD", "OPT", "CPT", "L2-EAD", "E3", "TN"],
        "reasoning": "Security clearance or government contract requirement"
      }
    }
  },

  "location_rules": {
    "deal_breaker_threshold": 50,
    "description": "Location scores below 50 result in automatic exclusion",
    "compatibility_matrix": {
      "rules": [
        {
          "job_location": "Remote",
          "candidate_preference": "Remote",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Remote",
          "candidate_preference": "Hybrid",
          "score": 95,
          "passes": true
        },
        {
          "job_location": "Remote",
          "candidate_preference": "Onsite",
          "score": 85,
          "passes": true
        },
        {
          "job_location": "Remote",
          "candidate_preference": "Flexible",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Hybrid",
          "candidate_preference": "Remote",
          "score": 40,
          "passes": false,
          "reasoning": "Candidate wants remote but job requires hybrid - EXCLUDED"
        },
        {
          "job_location": "Hybrid",
          "candidate_preference": "Hybrid",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Hybrid",
          "candidate_preference": "Onsite",
          "score": 90,
          "passes": true
        },
        {
          "job_location": "Hybrid",
          "candidate_preference": "Flexible",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Onsite",
          "candidate_preference": "Remote",
          "score": 20,
          "passes": false,
          "reasoning": "Candidate wants remote but job is onsite - EXCLUDED"
        },
        {
          "job_location": "Onsite",
          "candidate_preference": "Hybrid",
          "score": 40,
          "passes": false,
          "reasoning": "Candidate wants hybrid but job is onsite - EXCLUDED"
        },
        {
          "job_location": "Onsite",
          "candidate_preference": "Onsite",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Onsite",
          "candidate_preference": "Flexible",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Flexible",
          "candidate_preference": "Remote",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Flexible",
          "candidate_preference": "Hybrid",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Flexible",
          "candidate_preference": "Onsite",
          "score": 100,
          "passes": true
        },
        {
          "job_location": "Flexible",
          "candidate_preference": "Flexible",
          "score": 100,
          "passes": true
        }
      ]
    },
    "relocation": {
      "enabled": true,
      "score_boost": 30,
      "description": "Willing to relocate can override location mismatch",
      "override_threshold": 50,
      "reasoning": "If willing to relocate, location score boosted above exclusion threshold"
    }
  },

  "experience_rules": {
    "underqualified": {
      "threshold": -2,
      "penalty": -20,
      "reasoning": "2+ years less experience than required"
    },
    "slightly_underqualified": {
      "threshold": -1,
      "penalty": -10,
      "reasoning": "1 year less experience than required"
    },
    "meets_requirement": {
      "threshold": 0,
      "score": 100,
      "reasoning": "Meets experience requirement"
    },
    "exceeds_requirement": {
      "threshold": 2,
      "bonus": 10,
      "reasoning": "2+ years more experience"
    },
    "overqualified": {
      "threshold": 5,
      "penalty": -5,
      "reasoning": "Significantly overqualified - retention risk"
    }
  },

  "skills_rules": {
    "required_skills": {
      "weight": 0.70,
      "description": "Must-have skills critical for role"
    },
    "preferred_skills": {
      "weight": 0.30,
      "description": "Nice-to-have skills"
    },
    "minimum_required_match": {
      "threshold": 0.50,
      "reasoning": "Must have at least 50% of required skills"
    }
  },

  "scoring_thresholds": {
    "excellent": {
      "min_score": 85,
      "max_score": 100,
      "recommendation": "STRONG HIRE",
      "action": "Schedule interview immediately",
      "color": "green"
    },
    "strong": {
      "min_score": 75,
      "max_score": 84,
      "recommendation": "RECOMMENDED",
      "action": "Consider for interview",
      "color": "blue"
    },
    "good": {
      "min_score": 65,
      "max_score": 74,
      "recommendation": "CONSIDER",
      "action": "Review with hiring manager",
      "color": "yellow"
    },
    "moderate": {
      "min_score": 50,
      "max_score": 64,
      "recommendation": "WEAK MATCH",
      "action": "Consider only if no better candidates",
      "color": "orange"
    },
    "poor": {
      "min_score": 0,
      "max_score": 49,
      "recommendation": "NOT RECOMMENDED",
      "action": "Reject or consider for different role",
      "color": "red"
    }
  },

  "exclusion_tracking": {
    "enabled": true,
    "track_reasons": true,
    "categories": [
      {
        "reason": "location_mismatch",
        "display_name": "Location Preference Mismatch",
        "show_potential_score": true,
        "message": "Excluded due to location preference incompatibility"
      },
      {
        "reason": "work_authorization",
        "display_name": "Work Authorization Requirements",
        "show_potential_score": true,
        "message": "Excluded due to work authorization restrictions"
      },
      {
        "reason": "insufficient_skills",
        "display_name": "Insufficient Skills",
        "show_potential_score": false,
        "message": "Does not meet minimum skill requirements"
      }
    ]
  },

  "admin_settings": {
    "allow_user_weight_customization": true,
    "require_approval_for_changes": false,
    "audit_log_enabled": true,
    "default_timezone": "UTC"
  }
}
